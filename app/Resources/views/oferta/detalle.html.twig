{# app/Resources/views/oferta/detalle.html.twig #}
{% extends 'frontend.html.twig' %}
{% block title %}Detalles de
	{{ oferta.nombre }}
{% endblock %}
{% block id 'oferta' %}
{% block article %}
	{{ include('oferta/_oferta_completa.html.twig') }}
{% endblock %}
{% block aside %}
	{{ parent() }}
	<section id="relacionadas">
		<h2>Ofertas en otras ciudades</h2>
		<ul>
			{% for oferta in relacionadas %}
				<li>{{ oferta.ciudad.nombre }}:
					<a href="{{ path('oferta', { ciuda d: oferta.ciudad.slug, slug: oferta.slug }) }}">{{ oferta.nombre }}</a>
				</li>
			{% endfor %}
		</ul>
	</section>
{% endblock %}
